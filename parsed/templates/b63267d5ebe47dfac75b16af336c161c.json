{"components/common/newsletter-signup":"<section class=\"newsletter-signup section\">\n  <div class=\"container\">\n    <h3 class=\"section-title\">{{lang 'newsletter.subscribe'}}</h3>\n    <form class=\"form subscription-form\" action=\"{{urls.subscribe.action}}\" method=\"post\" data-validated-form>\n      <input type=\"hidden\" name=\"action\" value=\"subscribe\">\n      <input type=\"hidden\" name=\"nl_first_name\" value=\"bc\">\n      <input type=\"hidden\" name=\"check\" value=\"1\">\n      <div class=\"form-field form-inline\">\n        <label class=\"sr-only\" for=\"nl_email\">{{lang 'newsletter.email_placeholder'}}</label>\n        <input class=\"form-input\" id=\"nl_email\" name=\"nl_email\" type=\"email\" value=\"{{customer.email}}\" placeholder=\"{{lang 'newsletter.email_placeholder'}}\" required>\n      </div>\n      <input class=\"button button-primary button-wide\" type=\"submit\" value=\"{{lang 'newsletter.submit'}}\">\n    </form>\n  </div>\n</section>\n"}