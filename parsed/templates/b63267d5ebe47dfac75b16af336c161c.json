{"components/common/newsletter-signup":"<section class=\"newsletter-signup section\">\n  <div class=\"container\">\n    <h3 class=\"section-title footer-title\">{{lang 'newsletter.subscribe'}}</h3>\n    <form\n      class=\"form subscription-form\"\n      action=\"{{urls.subscribe.action}}\"\n      method=\"post\"\n      data-validated-form\n    >\n      <input type=\"hidden\" name=\"action\" value=\"subscribe\">\n      <input type=\"hidden\" name=\"nl_first_name\" value=\"bc\">\n      <input type=\"hidden\" name=\"check\" value=\"1\">\n      <div class=\"form-field form-inline\">\n        <label class=\"sr-only\" for=\"nl_email\">\n          {{lang 'newsletter.email_placeholder'}}\n        </label>\n        <input\n          class=\"form-input\"\n          id=\"nl_email\"\n          name=\"nl_email\"\n          type=\"email\"\n          value=\"{{customer.email}}\"\n          placeholder=\"{{lang 'newsletter.email_placeholder'}}\"\n          required\n        >\n      </div>\n      <input\n        class=\"button button-primary button-wide\"\n        type=\"submit\"\n        value=\"{{lang 'newsletter.submit'}}\"\n      >\n    </form>\n    {{#if settings.show_newsletter_summary}}\n      <div class=\"newsletter-summary\">\n        {{settings.newsletter_summary}}\n      </div>\n    {{/if}}\n  </div>\n</section>\n"}
